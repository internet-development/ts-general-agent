{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@adapters/*": ["./adapters/*"],
      "@modules/*": ["./modules/*"],
      "@skills/*": ["./skills/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", ".self", ".memory", ".workrepos"]
}
